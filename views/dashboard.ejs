<% body = 'Dashboard' %>
<%- include('layout.ejs') %>
<h1>Welcome to the Dashboard</h1>    
<p>You are successfully logged in!</p>
<a href="/logout">Logout</a>

<h2>Users</h2>    
<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.role %></td>
                <td>
                    <a href="/eupdate-user/<%= user.username %>">Edit</a>
                    <form action="/delete-user/<%= user.username %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

<h2>AE Titles</h2>    
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Host</th>
            <th>Port</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% aeTitles.forEach(aeTitle => { %>
            <tr>
                <td><%= aeTitle.name %></td>
                <td><%= aeTitle.host %></td>
                <td><%= aeTitle.port %></td>
                <td>
                    <a href="/edit-ae-title/<%= aeTitle.name %>">Edit</a>
                    <form action="/delete-ae-title/<%= aeTitle.name %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>
